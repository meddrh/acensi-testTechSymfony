{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firs Name</th>
                <th>Last name</th>
                <th>Numero etudiant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.FirstName }}</td>
                <td>{{ student.LastName }}</td>
                <td>{{ student.NumEtud }}</td>
                <td>
                    <a href="{{ path('student_show', {'id': student.id}) }}">Afficher</a>
                    <a href="{{ path('student_edit', {'id': student.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun étudiant n'existe</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('student_new') }}">Creer un étudiant</a>
{% endblock %}
