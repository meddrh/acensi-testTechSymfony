{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>First name</th>
                <td>{{ student.FirstName }}</td>
            </tr>
            <tr>
                <th>Last name</th>
                <td>{{ student.LastName }}</td>
            </tr>
            <tr>
                <th>Numéro étudiant</th>
                <td>{{ student.NumEtud }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">Retour à la liste d'étudiant</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}">Modifier</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
